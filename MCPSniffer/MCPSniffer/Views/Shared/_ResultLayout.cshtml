@{
    ViewBag.Title = "Result";
    Layout = null;
    string condition = ViewData["condition"].ToString();

}


<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <title>Search Result</title>
    @*<link href="~/Content/Result.css" rel="stylesheet" />*@
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding: 0px;
            margin: 0px;
            font-family: arial;
        }

        .header {
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            /*background-color: red;*/
            border-bottom: solid 1px #f1f1f1;
            -webkit-box-shadow: 0px 2px 3px #f8f8f8;
            -moz-box-shadow: 0px 2px 3px #f8f8f8;
            box-shadow: 0px 2px 3px #f8f8f8;
            background-color: white;
            z-index: 999;
            padding-bottom: 5px;
        }

        .img {
            height: 53px;
            margin-left: 5px;
            margin-top: 2px;
            vertical-align: text-bottom;
        }

        .search_box {
            width: 440px;
            height: 32px;
            font: 16px/18px arial;
            padding-left: 5px;
            vertical-align: text-bottom;
            margin-left: 5px;
            margin-bottom: 2px;
        }

        .btn_search {
            vertical-align: text-bottom;
            margin-bottom: 1px;
        }

        .result {
            display: block;
            position: absolute;
            width: 100%;
            top: 65px;
            left: 0;
        }

            .result ul {
                list-style: none;
                margin-left: 190px;
                padding: 0;
                /*max-width:1000px;*/
            }

                .result ul li {
                    /*float: left;*/
                    max-width: 600px;
                    min-height: 70px;
                    margin-left: 5px;
                    margin-top: 5px;
                    word-wrap: break-word;
                    word-break: break-all;
                    padding: 0;
                }

                    .result ul li h3 {
                        font-weight: 400;
                        font-size: 20px;
                        margin-bottom: 1px;
                    }

        .footer {
            width: 100%;
            height: 60px;
            margin-top: 50px;
            margin-left: 200px;
            /*background-color: red;*/
            background-color: white;
            z-index: 888;
            vertical-align: middle;
            text-align: left;
        }

        em {
            font-style: normal;
            background-color: yellow;
            color: #c00;
        }
    </style>
</head>
<body>
    <section id="headerSec" class="header">
        <form action="/Home/Result?" method="post" style="height:60px">
            <img src="~/images/ElektaLogo.svg" class="img" />
            <input id="txtCondition" class="search_box" maxlength="100" value="@condition" placeholder="Please enter a word." autocomplete="on" />
            <button id="btnSeach" class=" btn btn-info btn_search">
                <span class="glyphicon glyphicon-search"></span>  Search
            </button>
        </form>
    </section>

    <section>
        @RenderBody();
    </section>

    <section id="footer" class="footer">
        <p id="cp">©2017&nbsp; Developed by Blue Shit Team</p>
    </section>

    <script src="~/Scripts/jquery-2.0.2.min.js"></script>
    <script>
        $(function () {
            //js跳转页面(/controller/action)
            $('#btnSeach').click(function () {

                var f = document.getElementsByTagName("form")[0];
                var condition = document.getElementById("txtCondition").value;
                f.action = f.action + "condition=" + condition;

                //var condition = document.getElementById("txtCondition").value;

                //if (condition == undefined || condition == '') {
                //    alert("Please input a word!");
                //    return;
                //}

                //window.location.href = '/Home/Result?condition=' + condition;
            });

        });

        document.onkeydown = function (event) {
            var e = event || window.event || arguments.callee.caller.arguments[0];

            if (e && e.keyCode == 13) { // enter 键
                var condition = document.getElementById("txtCondition").value;

                if (condition == undefined || condition == '') {
                    alert("Please input a word!");
                    return;
                }

                window.location.href = '/Home/Result?condition=' + condition;
            }
        };
    </script>
</body>
</html>
